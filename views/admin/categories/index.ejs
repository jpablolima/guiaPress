<%- include("../../partials/header.ejs") %>
    <%- include("../../partials/navbar.ejs") %>

        <div class="container">
            <hr>
            <h2>Categorias</h2>
            <br>
            <a class="btn btn-success" href="/admin/categories/new">Nova Categoria</a>
            <hr>
            <table class="table table-light table-bordered">
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Título</td>
                        <td>Slug</td>
                        <td>Ações</td>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category => { %>
                        <tr>
                            <th>
                                <%= category.id %>
                            </th>
                            <th>
                                <%= category.title %>
                            </th>
                            <th>
                                <%= category.slug %>
                            </th>
                            <th>
                                <button class="btn btn-warning">Editar</button>

                                <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </th>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <%- include("../../partials/footer.ejs") %>

            <script>
                function confirmDelete(event, form) {
                    event.preventDefault()
                    const decisiin = confirm("Você quer deletar esta categoria!")
                    if (decisiin) {
                        form.submit();
                    }
                }
            </script>